<% layout('layout/example') %>
<div class="row">
    <div class="offset-3 col-6">
        <h1>アニメの編集</h1>
        <form action="/anime/<%= watch._id %>?_method=put" method="post" class="validated-form" novalidate>
            <div class="mb-3">
            <label for="name" class="form-label">名前</label>
            <input class="form-control" type="text" id="name" placeholder="名前" name="watch[name]" value="<%= watch.name %>" required>
            <div class="valid-feedback">
                ありがとう
              </div> 
        </div>
            
            <div class="mb-3">
            <label for="evaluation" class="form-label">点数</label>
            <input class="form-control" type="number" id="evaluation" name="watch[evaluation]" value="<%= watch.evaluation %>" required>
            <div class="valid-feedback">
                ありがとう
              </div> 
        </div>
            
            <div class="mb-3">
            <label for="category" class="form-label">カテゴリー</label>
            <select class="form-select" aria-label="Default select example" name="watch[category]" id="watch[category]">
                <option value="SF" <%= watch.category === 'SF' ? 'selected' : '' %>>SF</option>
                <option value="アクション" <%= watch.category === 'アクション' ? 'selected' : '' %>>アクション</option>
                <option value="コメディー" <%= watch.category === 'コメディー' ? 'selected' : '' %>>コメディー</option>
            </select>
            </div>

            
        <div class="mb-3">
            <label for="story" class="form-label">あらすじ</label>
            <textarea name="watch[story]" id="story" class="form-control"  rows="5" cols="40" required><%= watch.story %></textarea> 
            <div class="valid-feedback">
                ありがとう
              </div> 
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">画像url</label>
            <input class="form-control" type="text" id="image" name="watch[image]" value="<%=watch.image %>" required>
            <div class="valid-feedback">
                ありがとう
              </div> 
        </div>

            <br>
            <button type="submit" class="btn btn-info">送信</button>
      </form>
    </div>
</div>
