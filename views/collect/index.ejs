<% layout('layout/example') %>

<h1><%= category %>アニメ一覧</h1>

<% for(let items of watch){ %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= items.image %>" alt="アニメの紹介画像">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= items.name %>
                    </h5>
                    <p class="card-text">
                        <%= items.story %>
                    </p>
                    <p class="card-text">
                        ジャンル: <%= items.category %>
                    </p>
                    <p class="card-text">
                        <%= items.evaluation %>点
                    </p>
                    <a class="btn btn-primary" href="/anime/<%=items._id  %>"><%=items.name%>の詳細はこちら</a>
                </div>
            </div>
        </div>
    </div>
<% } %>


